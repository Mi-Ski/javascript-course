{
	"editor.mouseWheelZoom": true,

	"workbench.colorCustomizations": {
		"[Gruvbox - Dark Mode]": {
			"editor.selectionBackground": "#0400ff"
		},
		"[Darcula - Dark Mode]": {
			"editor.selectionBackground": "#ff00c8b9"
		},
		"[Oceanic Next (dimmed bg)]": {
			"editor.background": "#181818",
			"editorLineNumber.foreground": "#59ff99"
		},
		"[OS X Flat Dark]": {
			"editor.selectionBackground": "#2e89ff7a"
		},
		"[Pop N' Lock Theme by Luxcium âœ¨ Alexis's Black â›·]": {
			"editorCursor.foreground": "#d4b6b6"
		},
		"[Pop N' Lock Theme by Luxcium âœ¨ TSA/ASD ðŸ§©]": {
			"editorCursor.foreground": "#ffffff",
			"editorLineNumber.foreground": "#59ff99"
		},
		"[Default Dark+]": {
			"editor.background": "#181818",
			"statusBar.background": "#000000"
		},
		"[Monokai Pro]": {
			"editorLineNumber.foreground": "#59ff99",
			"editorLineNumber.activeForeground": "#ffc400",
			"editor.background": "#181818",
			"editorGutter.background": "#151515"
		}
	},

	"editor.tokenColorCustomizations": {
		"[NotepadPlusPlus Remixed Theme]": {
			"comments": "#a7a7a7"
		}
	},
	"auto-close-tag.enableAutoCloseSelfClosingTag": true,
	"keyboard.dispatch": "keyCode",

	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"before": ["u"],
			"after": [],
			"commands": [
				{
					"command": "undo"
				}
			]
		},
		{
			"before": ["<C-r>"],
			"after": [],
			"commands": [
				{
					"command": "redo"
				}
			]
		}
	],
	"files.exclude": {
		".gitignore": true,
		"**/ErrorBoundary": true,
		"config": true,
		"node_modules": true,
		"package-lock.json": true,
		"package.json": true,
		"public": true,
		"scripts": true
	},
	"editor.wordWrapColumn": 120,
	"editor.fontSize": 18,
	"liveServer.settings.port": 5501,
	"editor.fontFamily": "Consolas, 'Segoe UI Emoji'"
}
